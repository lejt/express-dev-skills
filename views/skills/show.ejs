<%- include('../partials/header') %>

<body>
    <h1><%= skill.skill.toUpperCase() %> EXPERIENCE</h1>
   
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Language/Framework</th>
                <th>Experience</th>
            </tr>
        </thead>
        <tbody>
            <% skill.technologies.forEach(tech => {  %>
                <tr>
                    <td><%= tech.language.toUpperCase() %></td>
                    <td><%= tech.experience %></td>

                    <td>
                        <form action="/skills/<%= skill.id %>/<%= tech.id %>/edit" method="GET">
                            <button type="submit" class="btn btn-secondary">X</button>
                        </form>
                    </td>
                    <td>
                        <form action="/skills/<%= skill.id %>?_method=DELETE&techID= <%= tech.id %>" method="POST">
                            <button type="submit" class="btn btn-danger">X</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <br>
    <h2>Projects</h2>
    <a href=<%= skill.projectlinks %> ><%= skill.projects.toUpperCase() %></a>
</body>

<%- include('../partials/footer') %>